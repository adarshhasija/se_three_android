<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.starsearth.three.fragments.lists.ChatListItemFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    <view class="androidx.recyclerview.widget.RecyclerView"
                                            android:id="@+id/list"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layoutManager="LinearLayoutManager"
                                            tools:context=".fragments.lists.ChatListItemFragment"
                                            tools:listitem="@layout/fragment_chatlistitem"
                                            android:paddingBottom="140dp"
                                            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/rlEmptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_conversations_in_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>
